<%= render partial: "shared/nav" %>

<h1>You are editing <%= @discount.name %> discount </h1>

<div  align="center">
  <%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@discount.id}", method: :patch, local: true, data: { turbo: false } do |f|  %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name, value: @discount.name %>
    <%= f.label :quantity, "Quantity Threshold: " %>
    <%= f.number_field :quantity, in: 1..Float::INFINITY, value: @discount.quantity %>
    <%= f.label :percentage, "Percentage: " %>
    <%= f.number_field :percentage, in: 1..100, value: @discount.percentage  %>
    <%= f.submit "Edit" %>
  <% end %>
</div>